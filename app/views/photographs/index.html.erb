<h1>Listing photographs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @photographs.each do |photograph| %>
      <tr>
        <td><%= photograph.title %></td>
        <td><%= photograph.description %></td>
        <td><%= photograph.image %></td>
        <td><%= link_to 'Show', photograph %></td>
        <td><%= link_to_if (current_user && current_user.id == photograph.user_id), 'Edit', edit_photograph_path(photograph) %></td>
        <td><%= link_to_if (current_user && current_user.id == photograph.user_id), 'Destroy', photograph, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'All Photographs', root_path %>
<% if current_user %>
<%= link_to 'New Photograph', new_photograph_path %>
<% end %>
